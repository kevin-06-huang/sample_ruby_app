<!-- this file is automatically generated when we generate the 
	controller -->
<% provide(:title, "Log in") %>

<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<!-- this part is difference from the form_for in user new view;
  		whereas user new view only need form_for(@user), since there is
  		a corresponding model for user, sessions doesn't have a model,
  		and therefore we need to indicate the name of the resource and
  		also give it the corresponding url -->
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
     <!-- listing 8.47, adding a remember me checkbox --> 
	<%= f.label :remember_me, class: "checkbox inline" do %>
		<%= f.check_box :remember_me %>
		<span>Remember me on this computer</span>
	<% end %>
      <!---->
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>